{
  "compilerOptions": {
    "target": "ES2023",
    "module": "Node16",
    "skipLibCheck": true,

    "moduleResolution": "node16",
    "isolatedModules": true,
    "moduleDetection": "force",
    "declaration": true,
    "outDir": "dist",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}
